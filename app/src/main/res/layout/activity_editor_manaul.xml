<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorManaulActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="মাসিক চাঁদা"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:id="@+id/title_ID"
        android:layout_marginTop="40dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nirdeshona"
        android:layout_below="@id/title_ID"
        android:layout_marginTop="20dp"
        android:textColor="#C11C10"
        android:id="@+id/nirdesona_ID"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        >
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="নাম..."
        android:layout_below="@id/nirdesona_ID"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:id="@+id/billManualName_ID">

    </EditText>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/billManualName_ID"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="টাকার পরিমাণ"
        android:id="@+id/bilManualAomunt_ID">

    </EditText>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bilManualAomunt_ID"
        android:layout_below="@id/billManualName_ID"
        android:layout_marginTop="10dp"
        android:hint="তারিখঃ মাস/ দিন / বছর"
        android:id="@+id/billManualDate_ID">

    </EditText>

    <EditText
        android:id="@+id/billTManualTrans_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bilManualAomunt_ID"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="ট্রানজেকশন নাম্বার">

    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/billTManualTrans_ID"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:hint=""
        android:text="Not"
        android:visibility="gone"
        android:id="@+id/billManualStatus_ID">

    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/billManualStatus_ID"
        android:layout_marginTop="30dp"
        android:layout_margin="50dp"
        android:text="submit"
        android:textSize="18sp"
        android:id="@+id/billManualSubmit_ID">

    </Button>

</RelativeLayout>